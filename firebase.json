{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source":"/marcas",
        "destination":"/pages/marcas.html"
      },
      {
        "source":"/productos",
        "destination":"/pages.productos.html"
      },
      {
        "source":"/nosotros",
        "destination":"/pages/nosotros.html"
      },
      {
        "source":"/servicios",
        "destination":"/pages/servicios.html"
      }
    ]
  }
}
